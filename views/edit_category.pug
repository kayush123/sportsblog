extends layout

block content
  .container
    .row
      .col-md-6
        h1 #{title}
        ul.errors
          if errors
            each error, i in errors
              li.alert.alert-danger #{error.msg}
        form(method='post' action='/categories/edit/' + category._id)
          .form-group
            h3 Title
            input.form-control( name='title', value=category.title)
          .form-group
            h3 Description
            textarea.form-control(name='description') #{category.description}
          input.btn.btn-default(type='submit', name='submit', value='Save')
          a.btn.btn-info(href='/manage/categories', data-cat-id=category._id) Back
          a.btn.btn-danger.category-delete.pull-right(href='/manage/categories', data-cat-id=category._id) Delete

