extends layout

block content
  .container
    .row
      .col-md-6
        h1 #{title}
        ul.errors
          if errors
            each error, i in errors
              li.alert.alert-danger #{error.msg}
        form(method='post' action='/categories/add')
          .form-group
            h3 Title
            input.form-control(type='text' name='title')
          .form-group
            h3 Description
            textarea.form-control(type='textarea' name='description')
          input.btn.btn-default(type='submit' name='submit' value='Save')
          a.btn.btn-info(href='/manage/categories') Back

